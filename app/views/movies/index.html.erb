
<div ng-app="MoviesApp">
 <div class="center_button" ng-click="showDetails=!showDetails">
  <button class="btn blue" ng-disabled="showDetails" ng-hide="showDetails">Get Movies</button>
 </div>
 <div class="content_movies" ng-show="showDetails" ng-controller="moviesCtrl">

<style>
  
  table#t01 {
    width: 75%;    
  }

  table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
  }
  
  tr:nth-child(even) {background: #CCC}
  tr:nth-child(odd) {background: #FFF}

</style>
 
<table align="center" border="1" style="width: 900px; height: 500px;">

 <caption><h1>Top 20 IMDB Movies Shooting Location Information </h1></caption>
  <tr align="center" style="background-color:#006600; color:white">
    <th align="center">Movie Name</th>
    <th align="center">Year</th>
    <th align="center">Shooting Location</th> 
  </tr>
  <tr ng-repeat="movie in movies" align="center">
    <td>
      <div class="content_text">"{{movie.title}}"</div>
    </td>
    <td>
      <div class="content_text">"{{movie.year}}"</div>
    </td>
    <td>
      <div class="content_text">"{{movie.location}}"</div>
    </td>
  </tr>   
</table>

<br>
  <table id="t01" align="center" border="1">
  <caption><h2>Locations Of the shooting</h2></caption>
    <tbody>
      <tr align="center" style="background-color:#006600; color:white">
      <th align="center">Movie Name</th>
      <th align="center">Shooting Location</th> 
      </tr>
      <tr ng-repeat="movie in movies" align="center">
        <td>
        <div class="content_text">"{{movie.title}}" was shot at "{{movie.location}}"</div>
        </td>
    <td>
        <img title="{{movie.title}} was shot at {{movie.location}}" width="600" src="http://maps.googleapis.com/maps/api/staticmap?center={{movie.location}}&zoom=7&scale=false&size=600x200&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:Red%7Clabel:M%7C{{movie.location}}">
    </td>
    </tr>
          
    </tbody>
  </table>

<table align="center" border="1">
<caption><h2>Locations Of the shooting</h2></caption>
<tr>
<td> 
<div align="center" border="1" style="width: 100%; height: 100%;">
  <div  id="map" style='width: 500px;height: 200px;'></div>
</div>

</td>
</tr> 
</table>

<table align="center" border="1">
<caption><h2>Location-Wise Distribution</h2></caption>
<tr>
<td>  <div id="piechart" align="center" border="1" style="width: 100%; height: 100%;"></div></td>
</tr>
</table>

